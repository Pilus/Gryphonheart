                        <Color r="0" g="0" b="0"/>
                        <Offset>
                            <AbsDimension x="1" y="-1"/>
                        </Offset>
                    </Shadow>
                </DisabledFont>
            </Button>


        </Frames>
        <Scripts>
            <OnLoad>
                GHM_LoadIconList();
                GH_Localize(self);
                local bgFrame = CreateFrame("Frame", "$parentBgFrame", self);
                bgFrame:SetAllPoints(self);
                local bgFrame2 = CreateFrame("Frame", "$parentBgFrame2", self);
                bgFrame2:SetAllPoints(self);
                bgFrame2:SetBackdrop({
                    bgFile = "Interface\\AddOns\\GHI\\texture\\white.tga",
                    edgeFile = "Interface/Tooltips/UI-Tooltip-Border",
                    tile = false,
                    tileSize = 16,
                    edgeSize = 16,
                    insets = { left = 4, right = 4, top = 4, bottom = 4 },
                });
                bgFrame:SetFrameLevel(bgFrame:GetFrameLevel() + 1);
                for _,c in pairs({self:GetChildren()}) do
                    if not(c == bgFrame2 or c == bgFrame) then
                        c:SetFrameLevel(c:GetFrameLevel() + 2);
                    end
                end


                self.UpdateTheme = function()

                    bgFrame:SetBackdrop({
                        bgFile = GHM_GetBackground(),
                        edgeFile = "Interface/Tooltips/UI-Tooltip-Border",
                        tile = false,
                        tileSize = 16,
                        edgeSize = 16,
                        insets = { left = 4, right = 4, top = 4, bottom = 4 }
                    });
                    bgFrame2:SetBackdropColor(GHM_GetBackgroundColor());
                end
                GHM_AddThemedObject(self);
                self.UpdateTheme(); -- avoiding a blink in the background texture
            </OnLoad>
        </Scripts>
    </Frame>

