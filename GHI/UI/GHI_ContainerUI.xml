	<Button name="GHI_ContainerFrameItemButtonTemplate" inherits="ItemButtonTemplate" hidden="true" virtual="true">
		<Anchors>
			<Anchor point="BOTTOMRIGHT">
				<Offset>
					<AbsDimension x="0" y="0" />
				</Offset>
			</Anchor>
		</Anchors>
		<Frames>
			<Cooldown name="$parentCooldown" inherits="CooldownFrameTemplate" />
		</Frames>
		<Scripts>
			<OnClick>
				if ( not ( IsModifierKeyDown() or IsShiftKeyDown() ) ) then
					--GHI_ContainerFrameItemButton_OnClick(self,button);
				end
				GHI_ContainerFrameItemButton_OnClick(self,button)
			</OnClick>
			<PostClick></PostClick>
			<OnLoad>GHI_ContainerFrameItemButton_OnLoad(self);</OnLoad>
			<OnEnter>GHI_ContainerFrameItemButton_OnEnter(self);</OnEnter>
			<OnLeave>self.updateTooltip = nil;
				GameTooltip:Hide();
				--ResetCursor();
			</OnLeave>
			<OnHide>if ( self.hasStackSplit and (self.hasStackSplit == 1) ) then
				StackSplitFrame:Hide();
				end
			</OnHide>
			<OnShow />
			<OnDragStart>
				if ( not ( IsModifierKeyDown() or IsShiftKeyDown() ) ) then
					GHI_ContainerFrameItemButton_OnClick(self,button)
				end
			</OnDragStart>
			<OnReceiveDrag />
			<OnUpdate>
				GHI_ContainerFrameItemButton_OnUpdate(self,elapsed);
			</OnUpdate>
			<OnEvent>
				if ( GameTooltip:IsOwned(self) ) then
					--GHI_ContainerFrameItemButton_OnEnter(self);
				end
			</OnEvent>
		</Scripts>
	</Button>
